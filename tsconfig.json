{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "types": ["jest"]
  },
  "include": ["src/*", "src/*.json", "src/dummy/*"],

}
